<?xml version="1.0"?>
<layout version="0.1.0">

    <default translate="label" module="page">
        <reference name="head">
            <action method="addCss"><stylesheet>css/catalogextensions/catalogextensions.css</stylesheet></action>
        </reference>
    </default>
	
    <catalogextensions_index_bestsellers>
        <reference name="head">
			<action method="addJs"><script>shopshark/jquery.product-list.js</script></action>
			<action method="addJs" ifconfig="milanoconfig/product_list/infinite_scroll"><script>shopshark/imagesloaded.pkgd.min.js</script></action>
			<action method="addJs" ifconfig="milanoconfig/product_list/infinite_scroll"><script>shopshark/jquery.infinitescroll.min.js</script></action>
		</reference>
        <reference name="content">
            <block type="catalogextensions/bestsellers_list" name="bestsellers_list" template="catalog/product/list.phtml" >
				<block type="catalog/product_list_toolbar" name="product_list_toolbar" template="catalog/product/list/toolbar.phtml">
                	<block type="page/html_pager" name="product_list_toolbar_pager" />
                </block>
                <action method="setToolbarBlockName"><name>product_list_toolbar</name></action>
            </block>
        </reference>
    </catalogextensions_index_bestsellers>
	
	<catalogextensions_index_featured>
        <reference name="content">
			<block type="catalogextensions/featured_list" name="featured_list" template="catalog/product/list.phtml" >
				<block type="catalog/product_list_toolbar" name="product_list_toolbar" template="catalog/product/list/toolbar.phtml">
                	<block type="page/html_pager" name="product_list_toolbar_pager" />
                </block>
                <action method="setToolbarBlockName"><name>product_list_toolbar</name></action>
            </block>
		</reference>
    </catalogextensions_index_featured>
	
	<catalogextensions_index_mostviewed>
